# Hedera operator (required)
OPERATOR_ID=0.0.xxxxx
OPERATOR_KEY=302e020100300506032b657004220420xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Pinata JWT for IPFS uploads (required for asset creation)
PINATA_JWT=eyJhbGciOi...

# Base URLs
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Hedera network selection (defaults to testnet)
HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_NETWORK=testnet

# Mirror Node (optional override)
MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com/api/v1

# Asset registry file on Hedera File Service (optional; auto-created if omitted)
ASSET_REGISTRY_FILE_ID=

# WalletConnect (optional but recommended for mobile wallets)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=
NEXT_PUBLIC_WC_RELAY_URL=wss://relay.walletconnect.com
